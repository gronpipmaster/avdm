pkgname='avdm-git'
pkgver="20141003"
pkgrel="1"
arch=('i686' 'x86_64')
makedepends=('go')
options=('!strip')

_gopackage='github.com/gronpipmaster/avdm'

build() {
    export GOPATH="$srcdir"
    cd "$srcdir"
    go get -u "$_gopackage"
    cd "src/$_gopackage" 
    VERSION=$(git describe --abbrev=5 --tags | sed 's/-/.r/; s/-/./')
    go build -ldflags "-X main.version $VERSION" -o $GOPATH/bin/avdm
}

package() {
    install -Dm755 "$srcdir/bin/avdm" "$pkgdir/usr/bin/avdm"
}
